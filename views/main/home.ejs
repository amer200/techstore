<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <!--start carouser-->
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                    aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                    aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                    aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <% if(randProd[0]){%>
                    <div class="carousel-item active">
                        <img src="<%=randProd[0].imgs[0]%>" class="d-block w-100" alt="prod">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>
                                <%=randProd[0].name%>
                            </h5>
                            <%if(randProd[0]){%>
                                <h6>
                                    <%= randProd[0].offer%>% خصم
                                </h6>
                                <%}%>
                                    <a href="/prod/<%=randProd[0]._id%>" class="btn btn-primary">عرض المنتج</a>
                        </div>
                    </div>
                    <%}%>
                        <% for(let i=1; i< randProd.length; i++){ %>
                            <div class="carousel-item">
                                <img src="<%=randProd[i].imgs[0]%>" class="d-block w-100" alt="prod">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>
                                        <%=randProd[i].name%>
                                    </h5>
                                    <%if(randProd[i]){%>
                                        <h6>
                                            <%= randProd[i].offer%>% خصم
                                        </h6>
                                        <%}%>
                                            <a href="/prod/<%=randProd[i]._id%>" class="btn btn-primary">عرض المنتج</a>
                                </div>
                            </div>
                            <% } %>
                                <button class="carousel-control-prev" type="button"
                                    data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button"
                                    data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
            </div>
            <!--end carouser-->
            <!-- start new prods-->
            <div class="new-prods categ container-fluid">
                <div class="row">
                    <h5>احدث المنتجات</h5>
                </div>
                <div class="row">
                    <% newProds.forEach(p=>{ %>
                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="card">
                                <img src="<%=p.imgs[0]%>" class="card-img-top" alt="produdct">
                                <div class="card-body">
                                    <p class="card-text p-name">
                                        <%=p.name%>
                                    </p>
                                    <% if(p.offer){ %>
                                        <p class="card-text p-offer">
                                            <%=p.price%> $
                                        </p>
                                        <p class="card-text p-price">
                                            <%=Math.floor(p.price - ((p.offer*p.price) / 100))%> $
                                        </p>
                                        <%}else{ %>
                                            <p class="card-text p-price">
                                                <%=p.price%> $
                                            </p>
                                            <%} %>
                                                <a href="/prod/<%=p._id%>" class="btn btn-primary">عرض المنتج</a>
                                </div>
                            </div>
                        </div>
                        <%})%>
                </div>
            </div>
            <!-- end new prods-->
            <!-- start offers-->
            <div class="new-prods categ container-fluid">
                <div class="row">
                    <h5>عروض وخصومات</h5>
                </div>
                <div class="row">
                    <% offer.forEach(p=>{ %>
                        <div class="col-12 col-sm-6 col-lg-3">
                            <div class="card">
                                <span class="offer">-<%=p.offer%>%</span>
                                <img src="<%=p.imgs[0]%>" class="card-img-top" alt="produdct">
                                <div class="card-body">
                                    <p class="card-text p-name">اسم المنتج</p>
                                    <p class="card-text p-offer">
                                        <%=p.price%> $
                                    </p>
                                    <p class="card-text p-price">
                                        <%=Math.floor(p.price - ((p.offer*p.price) / 100))%> $
                                    </p>
                                    <a href="/prod/<%=p._id%>" class="btn btn-primary">عرض المنتج</a>
                                </div>
                            </div>
                        </div>
                        <%})%>

                </div>
            </div>
            <!-- end offers-->
            <!--start feat-->
            <div class="feats container-fluid">
                <div class="row">
                    <div class="col-12 col-lg-4">
                        <div class="feat">
                            <i class="fa-solid fa-copyright"></i>
                            <span class="h2">منتجات اصلية</span>
                            <p class="lead"> كل منتجات متجرنا اصلية طبقا للمعاير العالمية</p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-4">
                        <div class="feat">
                            <i class="fa-solid fa-headset"></i>
                            <span class="h2">فريق مميز</span>
                            <p class="lead"> فريق الدعم الخاص بنا متواجد على مدار الساعة</p>
                        </div>
                    </div>
                    <div class="col-12 col-lg-4">
                        <div class="feat">
                            <i class="fa-solid fa-truck-fast"></i>
                            <span class="h2">شحن سريع</span>
                            <p class="lead"> ستصلك طلبيتك لباب البيت بسرعة قياسية</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end feat-->
            <%- include('includes/footer') %>